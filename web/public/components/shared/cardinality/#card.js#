import React from 'react';
import PropTypes from 'prop-types';
import {render} from 'react-dom';
import classnames from 'classnames';
import './card.less';
import '../shared/cardinality/cardinality';
import '../shared/suit/suit';

export default class Card extends React.Component {

    let {card, suit, isLast} = this.props;

    getSuitName() {
        let suitNames = {};
        suitNames['C'] = 'club';
        suitNames['D'] = 'diamond';
        suitNames['H'] = 'heart';
        suitNames['S'] = 'spade';
        
        if(suit in suitNames){
            return suitNames[suit];
        }

        return '';
    }

    getCardinality() {
        let cardinality = {};
        cardinality['T'] = 10;
        cardinality['J'] = 11;
        cardinality['Q'] = 12;
        cardinality['K'] = 13;
        cardinality['A'] = 1;

        if(card < 10) {
            return card;
        }
        else if(card in cardinality) {
            return cardinality[card];
        }
        
        return 0;
    }
    
    
    render() {
        return (
            <div className='card''>
                <Cardinality value={getCardinality()} />
                <Suit value={getSuit()} />
                {
                    if(isLast) {
                        <div className='big'>
                            <Suit value={getSuit()} />
                        </div>
                    }
                }
            </div>
        );
    }
}

Card.propTypes = {
    card: PropTypes.char,
    suit: PropTypes.char,
    isLast: PropTypes.boolean
};

